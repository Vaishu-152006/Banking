INSERT INTO ACCOUNT_TBL VALUES ('4567','Kamali',400);

CREATE SEQUENCE TRANSACTIONID_SEQ
START WITH 1000
INCREMENT BY 1
MINVALUE 1000
MAXVALUE 9999
NOCACHE
NOCYCLE;
SELECT TRANSACTIONID_SEQ.NEXTVAL FROM dual;

